extends layout

block content
  h4 Request a new team
  form(action="", method="post")
    .input-group
      input.input-field(type='text' name="name" placeholder="Team Name*" style={margin: '10px 0px 10px 0px', background: 'white', color: "#a9a9a9"} require)
      input.input-field(type='text' name="hometown" placeholder="Hometown City*" style={margin: '10px 0px 10px 0px', background: 'white', color: "#a9a9a9"} require)
      input.input-field(type='text' name="league" placeholder="Sport & League" style={margin: '10px 0px 10px 0px', background: 'white', color: "#a9a9a9"})
      .input-group-append
        button.btn.btn-outline-secondary Submit